# Application Shortcuts
alias safari='open -g -a safari'
alias chrome='open -g -a chrome'
alias firefox='open -g -a firefox'

# command shortcuts
alias up='cd ..'
alias upp='cd ../..'
alias uppp='cd ../../..'
alias del='rm -i'
alias vi='vim'
alias v='vim'
alias ll='ls -l'
alias la='ls -a'
alias lh='ls -h'
alias llah='ls -lah'

# svn shortcuts
alias st='svn st'
alias stu='svn st -u'
alias sdi='svn di'
alias sad='svn add'
alias sup='svn up'
alias sci='svn ci'
alias scim='svn ci -m'

# git shortcuts
alias gst='git status'
alias gci='git commit'
alias gdi='git diff'
alias gdc='git diff --cached'
alias gad='git add'
