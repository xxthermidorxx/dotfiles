# Java alias
alias javac='javac -J-Dfile.encoding=UTF-8'

# Application Shortcuts
alias safari='open -g -a safari'
alias chrome='open -g -a chrome'
alias firefox='open -g -a firefox'

# command shortcuts
alias up='cd ..'
alias upp='cd ../..'
alias uppp='cd ../../..'
alias del='rm -i'
alias vi='vim'
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lh='ls -h'
alias llah='ls -lah'

# Homebrew shortcuts
alias bin='brew install'
alias buin='brew uninstall'
alias bdoc='brew doctor'
alias bupd='brew update'
alias bupg='brew upgrade'
alias bls='brew list'

# svn shortcuts
alias st='svn st'
alias stu='svn st -u'
alias sdi='svn di'
alias sad='svn add'
alias sup='svn up'
alias sci='svn ci'
alias scim='svn ci -m'

# git shortcuts
alias glg='git log'
alias gst='git status'
alias gpl='git pull'
alias gdi='git diff'
alias gdica='git diff --cached'
alias grm='git rm'
alias gad='git add'
alias gcm='git commit -m'
alias gps='git push'
alias gbr='git branch'
alias gco='git checkout'
alias gsta='git stash'

# vagrant shortcuts
alias vinit='vagrant init'
alias vssh='vagrant ssh'
alias vst='vagrant status'
alias vup='vagrant up'
alias vhlt='vagrant halt'
alias vrld='vagrant reload'
alias vdst='vagrant destroy'
alias vprv='vagrant provision'
alias vbg='vagrant vbguest'
