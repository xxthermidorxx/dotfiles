# Ruby on rails path setting
export PATH="$HOME/.rbenv/shims:$PATH"
eval "$(rbenv init -)"

# JAVA_HOME path setting
#export JAVA_HOME=/Library/Java/JavaVirtual/jdk1.7.0_51.jdk/Contents/Home
export JAVA_HOME=$(/usr/libexec/java_home)
export PATH=$JAVA_HOME/bin:$PATH
export CLASSPATH=~/Documents/Java/Jar/*:~/GitHub/tempest/src:~/GitHub/storm/storm-core/target/classes

# Storm setting
export STORM_HOME=/usr/local

# gcc-cilk setting
export PATH=/opt/gcc-cilk/bin:$PATH
export CPATH=/opt/gcc-cilk/bin/include
export LIBRARY_PATH=/opt/gcc-cilk/lib
export LD_LIBRARY_PATH=/opt/gcc-cilk/lib
