autodetach on
bell_msg "^G"
altscreen on
term "screen-256color"
termcapinfo xterm* ti@:te@

# encoding
defkanji utf-8
defencoding utf-8
encoding utf-8 utf-8

# scroll
defscrollback 10000
escape ^Rr
startup_message off
vbell off
caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk} [%l] %{=b wb}%y/%m/%d(%D) %{=b wm}%c"
bind n screen
bind h prev
bind j next
bind l windowlist
