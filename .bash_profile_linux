if [ -f ~/.bashrc ]; then
  . ~/.bashrc
fi

# Java alias
alias javac='javac -J-Dfile.encoding=UTF-8'
alias java='java -Djava.library.path=/usr/local/lib:~/Jar'

# Application Shortcuts
alias safari='open -g -a safari'
alias chrome='open -g -a chrome'
alias firefox='open -g -a firefox'
alias emacs='vim'

# command shortcuts
alias up='cd ..'
alias upp='cd ../..'
alias uppp='cd ../../..'
alias del='rm -i'
alias vi='vim'
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lh='ls -h'
alias llah='ls -lah'
#alias rm='rmtrash'

# svn shortcuts
alias st='svn st'
alias stu='svn st -u'
alias sdi='svn di'
alias sad='svn add'
alias sup='svn up'
alias sci='svn ci'
alias scim='svn ci -m'

# git shortcuts
alias glg='git log'
alias gst='git status'
alias gpl='git pull'
alias gdi='git diff'
alias gdica='git diff --cached'
alias grm='git rm'
alias gad='git add'
alias gcm='git commit -m'
alias gps='git push'
alias gbr='git branch'
alias gco='git checkout'
alias gsta='git stash'
alias grmt='git remote'

# vagrant shortcuts
alias vinit='vagrant init'
alias vssh='vagrant ssh'
alias vst='vagrant status'
alias vup='vagrant up'
alias vhlt='vagrant halt'
alias vrld='vagrant reload'
alias vdst='vagrant destroy'
alias vprv='vagrant provision'
alias vbg='vagrant vbguest'

# terminal color setting
export CLICOLOR=1
export LSCOLORS=DxGxcxdxCxegedabagacad
export TERM=xterm-256color

# GCC setting
export CC=gcc
export CXX=g++
export CPPFLAGS="-march=core2 -mtune=core2"

# JAVA_HOME path setting
export JAVA_HOME=/usr/lib/jvm/java-1.7.0-openjdk-1.7.0.51.x86_64
export PATH=$JAVA_HOME/bin:$PATH
export CLASSPATH=$CLASSPATH:./:~/Jar/*
export LD_LIBRARY_PATH=/usr/local/lib
